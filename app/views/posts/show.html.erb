<div class="page-header">
  <h3><%= @post.title %></h3>
  <small>by <i><%= @post.user.nil? ? 'None' : @post.user.name %></i> at <%= @post.created_at.to_time.strftime('%x, %X') %></small>
</div>
<div class="post-body-content">
  <%= raw @post.body %>
</div>
