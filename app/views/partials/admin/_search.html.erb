<%
  if params[:controller] == 'admin/posts'
    form_action = admin_posts_path
    form_placeholder = 'Search Posts'

  elsif params[:controller] == 'admin/categories'
    form_action = admin_categories_path
    form_placeholder = 'Search Categories'

  elsif params[:controller] == 'admin/users'
    form_action = admin_users_path
    form_placeholder = 'Search Users'

  end
%>

  <%= form_tag(form_action, :method => 'get', id: 'search-form',
               class: 'navbar-form  navbar-right pull-right') do %>
      <div class="form-group">
        <div class="input-group">
          <%= text_field_tag(:search, params[:search], placeholder: form_placeholder, class: 'form-control') %>
          <span class="input-group-btn">
                  <%= submit_tag('Go', :name => nil, class: 'btn btn-default') %>
                </span>
        </div>
      </div>
  <% end %>