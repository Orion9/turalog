<div class="page-header">
  <h1>turalog/ <small>users</small></h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title" style="float:left"><b>Manage Users</b></h3>
    <%= link_to "Create New", new_admin_user_path, class: 'btn btn-default pull-right' %>
    <div class="clearfix"></div>
  </div>
  <div class="panel-body">
    <% if @users.exists? %>
        <table class="table table-bordered">
          <tr>
            <th>User Name</th>
            <th>User Email</th>
            <th>Date Created</th>
            <th>Actions</th>
          </tr>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.to_time.strftime('%B %e at %l:%M %p') %>
                <td>
                  <%=link_to "Edit", edit_admin_user_path(user), class:'btn btn-success' %>
                  <%=link_to "Delete", admin_user_path(user), class:'btn btn-danger',
                             method: :delete, data: { confirm: 'Are you ready?' } %>
                </td>
              </tr>
          <% end %>
        </table>
        <div class="pagination pull-right">
          <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
        </div>
    <% else %>
        <p>There are no users</p>
    <% end %>
  </div>
</div>

